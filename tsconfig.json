{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowJs": true, /* Compila si existe javascript tambien */
        "checkJs": true, /* Corrige errores de Javascript */
        "baseUrl": ".",
        "sourceMap": true,
        "moduleResolution": "node",
        "target": "es6",
        "outDir": "dist",
        "lib": [
            "es2015"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}